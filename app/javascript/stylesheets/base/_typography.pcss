@responsive {
  .text-description {
    @apply text-white-600 text-base font-normal tracking-normal;
  }

  .text-label {
    @apply text-white text-sm font-extrabold tracking-wide;
  }

  .text-primary {
    @apply text-white text-base font-normal tracking-normal;
  }

  .text-secondary {
    @apply text-white-500 text-base font-normal tracking-wide;
  }
}
