{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "extensions": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string"
              },
              "state": {
                "type": "string"
              }
            },
            "required": [
              "code",
              "state"
            ]
          }
        },
        "required": [
          "message",
          "extensions"
        ]
      }
    }
  },
  "required": [
    "errors"
  ]
}
